<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Converter Suhu"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:text="Celcius"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/editTextCelcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_alignBottom="@id/textView2"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_toEndOf="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        android:ems="10"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:hint="Masukkan Nilai Celcius"
        android:inputType="number" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextKelvin"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="Convert"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="Kelvin"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignLeft="@id/editTextCelcius"
        android:layout_alignRight="@id/editTextCelcius"
        android:layout_alignBottom="@id/textView3"
        android:ems="10"
        android:focusable="false"
        android:hint="Hasil dalam Kelvin"
        android:inputType="none"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextFarenheit"
        android:layout_alignBottom="@+id/editTextFarenheit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Farenheit"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextFarenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextKelvin"
        android:layout_alignLeft="@id/editTextKelvin"
        android:layout_alignRight="@id/editTextKelvin"
        android:ems="10"
        android:focusable="false"
        android:hint="Hasil dalam Farenheit"
        android:inputType="none"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFarenheit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:text="Reamur"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextReamur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView5"
        android:layout_alignLeft="@id/editTextFarenheit"
        android:layout_alignRight="@id/editTextFarenheit"
        android:layout_alignBottom="@id/textView5"
        android:ems="10"
        android:focusable="false"
        android:hint="Hasil Dalam Reamur"
        android:inputType="none"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextReamur"
        android:layout_alignLeft="@id/textView5"
        android:layout_marginRight="20dp"
        android:text="EXIT"
        android:textStyle="normal|bold" />

</RelativeLayout>